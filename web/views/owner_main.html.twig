{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

    <div class="jumbotron">
        <h1>Home</h1>
        <hr>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-info">
                <h2 class="panel-heading" >Teachers </h2>
                {% if teachers is not empty %}
                <div class="panel-body">
                    <h4 id="totals" class="stats-numbers">Total: {{ teachers|length }}</h4>
                    <ul>
                        {% for teacher in teachers %}
                        <li><a href="owner_teachers/{{teacher.getId}}">{{teacher.getName}}</a></li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    <!-- column -->
    <div class="col-md-3">
        <div class="panel panel-info">
            <h2 class="panel-heading" >Students</h2>
            {% if students is not empty %}
            <div class="panel-body">
                <h4 id="totals" class="stats-numbers">Total: {{ students|length }}</h4>
                <ul>
                    {% for student in students %}
                    <li><a href="owner_students/{{student.getId}}">{{student.getName}}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
    <!-- column -->
    <div class="col-md-3">
        <div class="panel panel-info">
            <h2 class="panel-heading" >Lessons</h2>
            <div class="panel-body">
                <h4 id="totals" class="stats-numbers">Total: {{lessons|length}} </h4>
                <ul>
                    {% for lesson in lessons %}
                    <li><a href="owner_lessons/{{lesson.getId}}">{{lesson.getTitle}}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <!-- column -->
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-info">
                <h2 class="panel-heading">Courses</h4>
                <div class="panel-body">
                    <h4 id="totals" class="stats-numbers">Total: {{courses|length}} </h4>
                    <ul>
                        {% for course in courses %}
                        <li><a href="owner_courses/{{course.getId}}">{{course.getTitle}}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
